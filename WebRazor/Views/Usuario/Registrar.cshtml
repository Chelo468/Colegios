@model ModelLayer.Entities.Usuario

@{
                /**/

                ViewBag.Title = "Registrar";
                Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="header-central">
    <h1><span>Registrar Usuario</span></h1>
</div>
<div class="contenido-central">
    <form>
        <div class="form-group">
            @Html.TextBoxFor(x => x.nombre_usuario, new { @class = "form-control", @placeholder = "Usuario" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(x => x.password, new { @class = "form-control", @placeholder = "Password", @type = "password" })
        </div>
        <div class="form-group">
            @Html.TextBox("password_confirm", "", new { @class = "form-control", @placeholder = "Confirmar Password", @type = "password" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(x => x.nombre, new { @class = "form-control", @placeholder = "Nombre" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(x => x.apellido, new { @class = "form-control", @placeholder = "Apellido" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(x => x.email, new { @class = "form-control", @placeholder = "Email" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.celular, new { @class = "form-control", @placeholder = "Celular" })
        </div>
        <div class="form-group">
            @Html.TextBox("codigoColegio","",new { @class = "form-control", @placeholder = "Código del colegio" })
        </div>
        <div class="form-group">
            <button id="btnRegistrar" type="button" class="btn btn-primario" style="margin-left: 55px">Registrar</button>
            <button id="btnCancelar" type="button" class="btn btn-secundario pull-right" style="margin-right: 55px">Volver</button>
        </div>

        <div class="form-group">
            <label id="lblRespuesta"></label>
        </div>

    </form>
</div>

@section scripts{

    <script type="text/javascript">

        var RegistrarUsuarioParams = {
            registrarUsuarioURL: "@Url.Action("registrarUsuario", "Usuario")",
            volverURL: "@Url.Action("Index","Sesion")"
        };

    </script>

    <script src="~/Scripts/website/usuario/registrar.js"></script>

}
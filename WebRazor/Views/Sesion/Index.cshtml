@model ModelLayer.Entities.Usuario


@{
    ViewBag.Title = "Iniciar Sesión - ColesWeb";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<title>Iniciar Sesion</title>

    <img src="~/Images/logo.png" alt="logo" style="width: 100%" />

<div class="body-login">
    <div class="form-group">
        <div class="form-group">
            @Html.Label("Usuario")
            @Html.TextBoxFor(p => p.nombre_usuario, new { @class = "form-control col-3", @placeholder = "Usuario" })
        </div>
        <div class="form-group">
            @Html.Label("Password")
            @Html.PasswordFor(p => p.password, new { @class = "form-control col-3", @placeholder = "Password" })
        </div>

        <button id="btnLogin" class="btn btn-primario pull-left" style="margin-left: 55px">Iniciar sesión</button>
        <button id="btnRegistrar" class="btn btn-secundario pull-right" style="margin-right: 55px">Registrarme</button>

    </div>

    <div class="row">
        <div class="col-md-12" style="text-align: center">
            <label id="lblErrorLogin" style="margin-top: 15px"></label>
        </div>
    </div>

</div>

@section scripts
{
    <script type="text/javascript">

        var SesionIndexParams = {
            iniciarSesionURL: "@Url.Action("iniciarSesion", "Sesion")",
            inicioURL: "@Url.Action("Principal", "Principal")",
            registrarURL: "@Url.Action("Registrar","Usuario")"
        };

    </script>

    <script src="~/Scripts/website/sesion/index.js"></script>
}